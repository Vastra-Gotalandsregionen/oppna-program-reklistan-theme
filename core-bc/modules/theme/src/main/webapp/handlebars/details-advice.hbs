<div class="section-details section-details-advice">
	{{#each fields}}
	    <h3 class="preview-title">{{value}}</h3>
		{{#each children}}
			<div class="item-{{@index}} advice-{{children.0.value}} body">
				{{#if children.1.value}}
					<h2 class="advice-subheading">{{children.1.value}}</h2>
				{{/if}}
				{{#is children.0.value 'for-childs'}}
					<img src="/reklistan-theme/images/theme/child.png" class="child-icon">
				{{/is}}
				{{{markdownify value}}}
				{{#each children}}
					{{#is name 'image'}}
						{{#if value}}
							<div class="details-image">
								<a href="{{{value}}}" target="_blank"><img src="{{{value}}}" alt=""></a>
								<a href="{{{value}}}" target="_blank" class="fullscreen-link">Visa bild i fullskärm</a>
							</div>						
						{{/if}}
					{{/is}}
				{{/each}}
				{{#is children.0.value 'physical-exercise'}}
					<div class="details-physical-exercise-meta"><p>Se även kapitel <a href="#/advice/Fysisk_aktivitet">Fysisk aktivitet</a></p></div>
				{{/is}}			
			</div>
		{{/each}}
	{{/each}}
</div>
